{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch postiz-app (pnpm dev)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/postiz-app",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch portal-backend (npm run dev)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/portal-backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Launch both dev servers",
      "configurations": [
        "Launch postiz-app (pnpm dev)",
        "Launch portal-backend (npm run dev)"
      ]
    }
  ]
}
